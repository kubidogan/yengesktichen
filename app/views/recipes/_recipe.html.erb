<div id="<%= dom_id recipe %>">
  <p>
    <strong>Name:</strong>
    <%= recipe.name %>
  </p>

  <p>
    <strong>Category:</strong>
    <%= recipe.category %>
  </p>

  <p>
    <strong>Price:</strong>
    <%= recipe.price %>
  </p>

  <p>
    <strong>Data:</strong>
    <%= recipe.data %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= recipe.description %>
  </p>

  <p>
    <strong>Instructions:</strong>
    <%= recipe.instructions %>
  </p>

</div>
<div class="card" style="width: 18rem;">
  <img src="..." class="card-img-top" alt="...">
  <div class="card-body">
    <h5 class="card-title"><%= recipe.name %></h5>
    <p class="card-text"><%= recipe.description %> </p>
  </div>
  <ul class="list-group list-group-flush">
    <li class="list-group-item"><%= recipe.data %></li>
    <li class="list-group-item"><%= recipe.price %></li>
    <li class="list-group-item"><%= recipe.category %></li>
  </ul>
  <div class="card-body">
    <%= link_to "Edit this recipe", edit_recipe_path(@recipe), class: "btn btn-primary"  %> |
    <%= link_to "Back to recipes", @recipes_path , class: "btn btn-success" %>
    <%= button_to "Destroy this recipe", @recipe,  method: :delete, class: "btn btn-danger"  %>
  </div>
</div>
